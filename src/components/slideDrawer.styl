
.drawer-wrapper-enter, .drawer-wrapper-leave-to
  transition: all 0.5s ease;
  opacity: 0;
  transform: translateY( 180px );
.drawer-wrapper-enter-to, .drawer-wrapper-leave
  transition: all 0.5s ease;
  transform: translateY(0);

.drawer-container
  position fixed
  left 0
  bottom 0
  width 100%
  height auto
  border-top solid 1px #000
  //background greenyellow
  .button-container
    position relative
    .button
      display inline-block
      width 28px
      height 28px
      background-image url("downr.png")
      background-size 100%
  .drawer
    padding 0
    .item-container
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content flex-start
      margin 0
      padding 0
      .item
        list-style-type none
        flex: 0 1 auto
        width: 15%
        //width 80px
        height 100px
        margin 0 5%
        //background mistyrose
        .inside-box
          width 60px
          display inline-block
          text-align center
          .img
            display inline-block
            width 50px
            height 50px
            background-size 50px
            border-radius 50%


